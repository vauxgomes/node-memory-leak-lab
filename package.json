{
  "name": "node-memory-leak-lab",
  "version": "1.0.0",
  "private": true,
  "description": "A laboratory to simulate, diagnose and fix memory leaks in Node.js",
  "author": "Vaux Gomes",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev -w packages/backend",
    "dev:frontend": "npm run dev -w packages/frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "devDependencies": {
    "autocannon": "^7.15.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.9.3"
  }
}
